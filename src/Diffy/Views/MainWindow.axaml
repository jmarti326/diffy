<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Diffy.ViewModels"
        xmlns:models="using:Diffy.Models"
        xmlns:controls="using:Diffy.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Diffy.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Diffy - File Comparison Tool"
        MinWidth="800"
        MinHeight="500"
        Background="{DynamicResource SystemRegionBrush}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <!-- Diff line styles - work in both light and dark modes -->
        <Style Selector="Border.diff-unchanged">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="Border.diff-inserted">
            <Setter Property="Background" Value="#40008800"/>
        </Style>
        <Style Selector="Border.diff-deleted">
            <Setter Property="Background" Value="#40CC0000"/>
        </Style>
        <Style Selector="Border.diff-modified">
            <Setter Property="Background" Value="#40CC8800"/>
        </Style>
        <Style Selector="Border.diff-imaginary">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
        </Style>
        
        <!-- ListBox styles for diff selection -->
        <Style Selector="ListBox.diff-list">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="ListBox.diff-list ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
        </Style>
        <Style Selector="ListBox.diff-list ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#40007ACC"/>
        </Style>
        <Style Selector="ListBox.diff-list ListBoxItem:selected:focus /template/ ContentPresenter">
            <Setter Property="Background" Value="#60007ACC"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                Padding="10" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" 
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Command="{Binding LoadLeftFileCommand}" Content="ðŸ“‚ Load Left" ToolTip.Tip="Load left file"/>
                <Button Command="{Binding LoadRightFileCommand}" Content="ðŸ“‚ Load Right" ToolTip.Tip="Load right file"/>
                <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                <Button Command="{Binding CompareCommand}" Content="ðŸ” Compare" ToolTip.Tip="Compare texts"/>
                <Button Command="{Binding SwapSidesCommand}" Content="â‡„ Swap" ToolTip.Tip="Swap left and right"/>
                <Button Command="{Binding ClearCommand}" Content="ðŸ—‘ Clear" ToolTip.Tip="Clear all"/>
                <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                <!-- Statistics -->
                <Border Background="#40008800" CornerRadius="3" Padding="8,4">
                    <TextBlock Text="{Binding InsertedCount, StringFormat='+ {0}'}" Foreground="#00AA00"/>
                </Border>
                <Border Background="#40CC0000" CornerRadius="3" Padding="8,4">
                    <TextBlock Text="{Binding DeletedCount, StringFormat='- {0}'}" Foreground="#EE4444"/>
                </Border>
                <Border Background="#40CC8800" CornerRadius="3" Padding="8,4">
                    <TextBlock Text="{Binding ModifiedCount, StringFormat='~ {0}'}" Foreground="#DDAA00"/>
                </Border>
                <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                <!-- Theme Toggle -->
                <Button Command="{Binding ToggleThemeCommand}" Content="ðŸŒ“ Theme" ToolTip.Tip="Toggle light/dark theme"/>
                <Separator Width="1" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                <!-- Copy Options -->
                <Button Command="{Binding CopyLeftCommand}" Content="ðŸ“‹ Copy Left" ToolTip.Tip="Copy left text to clipboard"/>
                <Button Command="{Binding CopyRightCommand}" Content="ðŸ“‹ Copy Right" ToolTip.Tip="Copy right text to clipboard"/>
                <Button Command="{Binding CopyUnifiedDiffCommand}" Content="ðŸ“‹ Copy Diff" ToolTip.Tip="Copy unified diff to clipboard"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content - Split View -->
        <Grid Grid.Row="1" ColumnDefinitions="*,5,*">
            
            <!-- Left Panel -->
            <Grid Grid.Column="0" RowDefinitions="Auto,*,Auto">
                <Border Grid.Row="0" 
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                        Padding="10,5">
                    <TextBlock Text="{Binding LeftFilePath}" FontWeight="SemiBold"/>
                </Border>
                
                <!-- Left Text Input -->
                <TextBox Grid.Row="1" 
                         Text="{Binding LeftText}" 
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas, Courier New, monospace"
                         FontSize="13"
                         Watermark="Paste or type left text here..."
                         BorderThickness="0"/>
                
                <!-- Left Diff View -->
                <ListBox x:Name="LeftDiffList"
                         Grid.Row="2" 
                         Classes="diff-list"
                         MaxHeight="300"
                         ItemsSource="{Binding LeftDiffLines}"
                         SelectionMode="Multiple"
                         IsVisible="{Binding LeftDiffLines.Count}">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy Line" 
                                      Command="{Binding CopyLineCommand}" 
                                      CommandParameter="{Binding #LeftDiffList.SelectedItem}"/>
                            <MenuItem Header="Copy Line with Number" 
                                      Command="{Binding CopyLineWithNumberCommand}" 
                                      CommandParameter="{Binding #LeftDiffList.SelectedItem}"/>
                            <Separator/>
                            <MenuItem Header="Copy Selected Lines" 
                                      Command="{Binding CopySelectedLeftLinesCommand}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:DiffLine">
                            <Border Classes.diff-unchanged="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsUnchanged}}"
                                    Classes.diff-inserted="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsInserted}}"
                                    Classes.diff-deleted="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsDeleted}}"
                                    Classes.diff-modified="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsModified}}"
                                    Classes.diff-imaginary="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsImaginary}}"
                                    Padding="5,2">
                                <Grid ColumnDefinitions="40,*">
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding LineNumber}" 
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                               FontFamily="Consolas, Courier New, monospace"
                                               FontSize="12"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,10,0"/>
                                    <controls:InlineDiffTextBlock Grid.Column="1" 
                                               DiffLine="{Binding}" 
                                               FontFamily="Consolas, Courier New, monospace"
                                               FontSize="12"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" 
                          ResizeDirection="Columns"/>
            
            <!-- Right Panel -->
            <Grid Grid.Column="2" RowDefinitions="Auto,*,Auto">
                <Border Grid.Row="0" 
                        Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" 
                        Padding="10,5">
                    <TextBlock Text="{Binding RightFilePath}" FontWeight="SemiBold"/>
                </Border>
                
                <!-- Right Text Input -->
                <TextBox Grid.Row="1" 
                         Text="{Binding RightText}" 
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="NoWrap"
                         FontFamily="Consolas, Courier New, monospace"
                         FontSize="13"
                         Watermark="Paste or type right text here..."
                         BorderThickness="0"/>
                
                <!-- Right Diff View -->
                <ListBox x:Name="RightDiffList"
                         Grid.Row="2" 
                         Classes="diff-list"
                         MaxHeight="300"
                         ItemsSource="{Binding RightDiffLines}"
                         SelectionMode="Multiple"
                         IsVisible="{Binding RightDiffLines.Count}">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy Line" 
                                      Command="{Binding CopyLineCommand}" 
                                      CommandParameter="{Binding #RightDiffList.SelectedItem}"/>
                            <MenuItem Header="Copy Line with Number" 
                                      Command="{Binding CopyLineWithNumberCommand}" 
                                      CommandParameter="{Binding #RightDiffList.SelectedItem}"/>
                            <Separator/>
                            <MenuItem Header="Copy Selected Lines" 
                                      Command="{Binding CopySelectedRightLinesCommand}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:DiffLine">
                            <Border Classes.diff-unchanged="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsUnchanged}}"
                                    Classes.diff-inserted="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsInserted}}"
                                    Classes.diff-deleted="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsDeleted}}"
                                    Classes.diff-modified="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsModified}}"
                                    Classes.diff-imaginary="{Binding Type, Converter={x:Static vm:DiffTypeConverters.IsImaginary}}"
                                    Padding="5,2">
                                <Grid ColumnDefinitions="40,*">
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding LineNumber}" 
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                               FontFamily="Consolas, Courier New, monospace"
                                               FontSize="12"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,10,0"/>
                                    <controls:InlineDiffTextBlock Grid.Column="1" 
                                               DiffLine="{Binding}" 
                                               FontFamily="Consolas, Courier New, monospace"
                                               FontSize="12"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" 
                Padding="10,5" 
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" 
                BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        </Border>
    </Grid>
</Window>
